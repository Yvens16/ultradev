{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["jest"],
    "paths": {
      "@domain/*": ["./domain/*"],
      "@application/*": ["./application/*"],
      "@framework/*": ["./framework/*"],
